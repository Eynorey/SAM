<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="de.saminitiative.sam.domain.User" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Authority" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.User.authorities" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.PersistentToken" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Profile" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Profile.users" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Profile.offeredCourses" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Profile.occupiedCourses" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Profile.skills" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Course" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Course.dependencies" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Course.skillsToLearns" uses-template="simple"/>

    <cache alias="de.saminitiative.sam.domain.Skill" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
